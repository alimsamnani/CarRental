@model CarRentalApp.Models.Image

@{
    Layout = null;
    Layout = "~/Views/Shared/_Master.cshtml";
}


<script>
    function openModal() {
        $("#myModal").modal();
    }

</script>

<!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Add Car</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p>Add Car to display on Home Page and Car Sections.</p>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>

<div class="contact-page-wrao section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 m-auto">
                <div class="contact-form">
                    <form action="saveData"  enctype="multipart/form-data" method="post">
                        <div class="row margin-row" style="margin-bottom: 30px;">
                            <div class="col-lg-6 col-md-6">
                                <div class="name-input">
                                    Car Name <br />
                                    <input type="text" name="CarName" placeholder="Car Name" />
                                </div>
                            </div>


                            <div class="col-lg-6 col-md-6">
                                <div class="name-input">
                                    Category <br />

                                    @Html.DropDownList("categoryId", ViewBag.CategoryList as SelectList, "--Select Category--", new { @class = "select-custom" })
                                </div>
                            </div>
                        </div>

                        <div class="row" style="margin-bottom: 30px;">
                            <div class="col-lg-6 col-md-6">
                                <div class="name-input">
                                    Car Make 
                                    <input type="text" name="CarMake" placeholder="Car Make" />
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="name-input">
                                    Car Model 
                                    <input type="text" name="CarModel" placeholder="Car Model" />
                                </div>
                            </div>
                        </div>


                        <div class="row" style="margin-bottom: 30px;">
                            <div class="col-lg-6 col-md-6">
                                <div class="name-input">
                                    Num Of Doors 
                                    <input type="text" name="CarDoors" />
                                </div>
                            </div>

                            <div class="col-lg-6 col-md-6">
                                <div class="name-input">
                                    Num Of Seats 
                                    <input type="text" name="NumOfSeats" />
                                </div>
                            </div>

                        </div>

                        <div class="row" style="margin-bottom: 30px;">
                            <div class="col-lg-6 col-md-6">
                                <div class="name-input">
                                    Cars has AC? 
                                    <select name="hasAC" class="select-custom">
                                        <option value="true">Yes</option>
                                        <option value="false">No</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-lg-6 col-md-6">
                                <div class="name-input">
                                    Type of Car 
                                    <select name="carType" class="select-custom">
                                        <option>Automatic</option>
                                        <option>Manual</option>
                                    </select>
                                </div>
                            </div>

                        </div>
                        <div class="row" style="margin-bottom: 30px;">
                            <div class="col-lg-6 col-md-6">
                                <div class="name-input">
                                    Rental Charges(Per Day) 
                                    <input type="text" name="rentalCharge" />
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="name-input">
                                    Mileage Allowed 
                                    <input type="text" name="mileageAllowed" />
                                </div>
                            </div>

                        </div>

                        <div class="row" style="margin-bottom: 30px;">
                            <div class="col-lg-6 col-md-6">
                                <div class="name-input">
                                    Buffer Days after Return 
                                    <input type="number" name="bufferDays" />
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="name-input">
                                    Upload Images
                                
                                    <input type="file" multiple name="files" required>
                                </div>
                            </div>

                        </div>

                        <div class="input-submit">
                            <button type="submit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- Modal -->

<div class="modal fade modalPopup" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="top:10px">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLabel">Modal title</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h3>Car Added Successfully.</h3>
            </div>
            <div class="modal-footer">

                <div class="input-submit">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.JavaScriptFunction != null)
{
    <script type="text/javascript">
            @Html.Raw(ViewBag.JavaScriptFunction)
    </script>
}
